<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="138.0" prefWidth="300.0" spacing="5.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ConfigsController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Tile size:" />
            <ComboBox fx:id="comboBoxTileSize" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Field size:" />
            <ComboBox fx:id="comboBoxFieldSize" />
            <CheckBox fx:id="checkBoxOnlySquares" mnemonicParsing="false" text="Only square fields" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Total bombs:" />
            <ComboBox fx:id="comboBoxTotalBombs" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="buttonStartGame" mnemonicParsing="false" text="Start Game" />
         </children>
      </HBox>
   </children>
</VBox>
